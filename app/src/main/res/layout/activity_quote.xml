<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/black"
    tools:context="android518.qwnasfirebasequotes.QuoteActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:text="@string/quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quoteTextView"
            android:textSize="30sp"
            android:textStyle="italic"
            android:background="@color/quote"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:gravity="fill_horizontal"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:text="@string/attributed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/attributedTextView"
            android:textSize="24sp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="20dp" />

        <TextView
            android:text="@string/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateTextView"
            android:textColor="@color/white"
            android:gravity="right"
            android:layout_marginRight="20dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TextView
            android:text="@string/reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/referenceTextView" />

    </LinearLayout>

</RelativeLayout>
